<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pomelo.weightscale" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pomelo.weightscale.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pomelo.weightscale.ChartActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pomelo.weightscale.DataActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pomelo.weightscale.SquareActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.pomelo.weightscale.MoreActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
